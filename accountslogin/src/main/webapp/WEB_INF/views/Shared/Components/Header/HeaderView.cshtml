@model accountslogin.src.main.aspnet.com.sys.accountslogin.presentation.viewmodels.HeaderViewModel
@{
}


<div id="banner" class="banner banner_large">
    <div class="header">
        <!-- container-for-Head-Nav -->
        <div class="container">
            <div class="logo">
                <!-- Using asp-route- here to use tag helpers without directly setting href -->
                <a asp-area="" asp-controller="Index" asp-action="Index">
                    <img src="@Url.Content("~/images/logo.png")" class="img-responsive" alt="logo" />
                </a>
            </div>
            <!-- script-for-nav -->
            <div class="head-nav">
                <span class="menu"> </span>
                <ul>
                    <li id="home_li"><a asp-area="" asp-controller="Index" asp-action="Index">Home</a></li>
                    <li id="login_li"><a asp-area="" asp-controller="Login" asp-action="Login">Login</a></li>
                    <li id="logout_li" style="display:none"><a asp-area="" asp-controller="Login" asp-action="Logout">Logout</a></li>
                    <li id="sign_up_li"><a asp-area="" asp-controller="Signup" asp-action="Signup">Sign Up</a></li>
                    @if (User.IsInRole("USER") || User.IsInRole("MANAGER") || User.IsInRole("ADMIN"))
                    {
                        <li id="account_info_li"><a asp-area="" asp-controller="Accountinfo" asp-action="Accountinfo">Account Info</a></li>
                    }

                    @if (User.IsInRole("MANAGER") || User.IsInRole("ADMIN"))
                    {
                        <li id="management_li"><a asp-area="" asp-controller="Management" asp-action="Management">Management</a></li>
                    }
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!-- end of container-for-Head-Nav -->
    <!-- container-search -->
    <div id="search-container" class="container">
        <div class="search-container">
            <article>
                <form>
                    <div class="banner-info">
                        <div class="col info">
                            <h1 id="search-title" class="search-title">Find your restaurant for ordering table</h1>
                            <input id="search_criteria_1_txt" name="search_criteria_1_txt"
                                   class="form-input margin-bottom search-container-input"
                                   placeholder="Enter Search Criteria*" type="text">
                            <select id="search_criteria_2_drp" name="search_criteria_2_drp"
                                    class="form-select search-container-select" aria-label="party size">
                                <option value="1">Criteria Value 1</option>
                            </select>
                            <a id="search_btn" class="normal_button" href="#">Search</a>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </form>
            </article>
        </div>
    </div>
    <!-- end of container-search -->
</div>